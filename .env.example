# Environment variables for NLP Learning Workflow
# Copy this file to .env and fill in your values

# Required: OpenAI API Key
OPENAI_API_KEY=

# Database Configuration (Supabase)
SUPABASE_URL=
SUPABASE_KEY=

# Vector Store Configuration (Qdrant)
# For local development: http://localhost:6333
# For cloud: https://xxxx.qdrant.io
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Leave empty for local, add key for cloud

# Optional: Alternative LLM Providers
ANTHROPIC_API_KEY=
GROQ_API_KEY=
GEMINI_API_KEY=

# Optional: Search API Keys
SEMANTIC_SCHOLAR_API_KEY=  # Optional, works without but has lower rate limits
OPENALEX_EMAIL=  # Polite request for OpenAlex API

# Application Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
PAPERS_PER_DAY=2  # Default number of papers to process
DEFAULT_MODEL=gpt-4o-mini  # or claude-3-haiku, mixtral-8x7b

# Scheduling (for automated runs)
SCHEDULE_ENABLED=false
SCHEDULE_TIME=08:00  # 24-hour format
SCHEDULE_TIMEZONE=UTC

# Feature Flags
ENABLE_QUIZ_GENERATION=true
ENABLE_PODCAST_SCRIPTS=false
ENABLE_SPACED_REPETITION=true
ENABLE_CACHE=true

# Paths (optional, defaults will be used if not set)
PDF_CACHE_DIR=./data/pdfs
LOG_DIR=./logs
EXPORT_DIR=./exports
